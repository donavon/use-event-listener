{
  "name": "@use-it/event-listener",
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "version": "1.0.0-beta.3",
  "description": "A custom React Hook that provides a useEventListener.",
  "license": "MIT",
  "author": "Donavon West <github@donavon.com> (https://donavon.com/)",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "react-hooks",
    "hooks",
    "react",
    "utils",
    "lib",
    "event-listener"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test:watch": "tsdx test --passWithNoTests --watchAll",
    "test": "tsdx test --passWithNoTests --coverage",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/use-event-listener-ts.esm.js",
  "size-limit": [
    {
      "path": "dist/use-event-listener-ts.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/use-event-listener-ts.esm.js",
      "limit": "10 KB"
    }
  ],
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.0",
    "@testing-library/react": "^11.2.2",
    "@testing-library/react-hooks": "^3.4.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "husky": "^4.3.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "size-limit": "^4.9.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "global-event-target": "^0.1.0"
  }
}
